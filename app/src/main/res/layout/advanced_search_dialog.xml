<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <EditText
        android:id="@+id/searchCityEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="City"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/propertyTypeSpinnerRL"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignEnd="@id/searchCityEditText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchCityEditText">

        <Spinner
            android:id="@+id/searchPropertyTypeSpinner"
            style="@android:style/Widget.DeviceDefault.Spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animationCache="false"
            android:background="@drawable/teal_outline"
            android:focusableInTouchMode="true"
            android:nestedScrollingEnabled="true"
            android:spinnerMode="dropdown" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/oOfBedroomsSpinnerRL"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/propertyTypeSpinnerRL"
        app:layout_constraintStart_toStartOf="@+id/propertyTypeSpinnerRL"
        app:layout_constraintTop_toBottomOf="@+id/propertyTypeSpinnerRL">

        <Spinner
            android:id="@+id/searchNoOfBedroomsSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/teal_outline" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
